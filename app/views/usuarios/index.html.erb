<p id="notice"><%= notice %></p>

<h1>Listing Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Bookmark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.bookmark %></td>
        <td><%= link_to 'Show', bookmark_usuario_path_post_path(@bookmark,usuario) %></td>
        <td><%= link_to 'Edit', edit_usuario_path(@bookmark,usuario) %></td>
        <td><%= link_to 'Destroy', bookmark_usuario_path_post_path(@bookmark,usuario), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usuario', new_bookmark_usuario_path(@bookmark) %>
